<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_rental_periods" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.rental.periods</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale_renting.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='sale_renting_minimal_duration'][1]" position="replace">
            </xpath>
            <xpath expr="//setting[@id='sale_renting_minimal_duration'][last()]" position="after">
                <h2>Durées minimales par période</h2>
                <div class="row mt16 o_settings_container" id="rental_seasonal_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <!-- Le reste de votre code reste identique -->
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Période 1 (Avant saison)</span>
                            <div class="text-muted">
                                Définir la première période et la durée minimale associée
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Du" for="renting_period1_start_date" class="col-lg-3 o_light_label"/>
                                    <field name="renting_period1_start_date" class="col-lg-3"/>
                                    <label string="au" for="renting_period1_end_date" class="col-lg-2 o_light_label"/>
                                    <field name="renting_period1_end_date" class="col-lg-4"/>
                                </div>
                                <div class="row mt16">
                                    <label string="Durée minimum" for="renting_period1_minimal_time_duration" class="col-lg-3 o_light_label"/>
                                    <field name="renting_period1_minimal_time_duration" class="col-lg-3"/>
                                    <field name="renting_period1_minimal_time_unit" class="col-lg-6"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Période 2 (Saison)</span>
                            <div class="text-muted">
                                Définir la deuxième période et la durée minimale associée
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Du" for="renting_period2_start_date" class="col-lg-3 o_light_label"/>
                                    <field name="renting_period2_start_date" class="col-lg-3"/>
                                    <label string="au" for="renting_period2_end_date" class="col-lg-2 o_light_label"/>
                                    <field name="renting_period2_end_date" class="col-lg-4"/>
                                </div>
                                <div class="row mt16">
                                    <label string="Durée minimum" for="renting_period2_minimal_time_duration" class="col-lg-3 o_light_label"/>
                                    <field name="renting_period2_minimal_time_duration" class="col-lg-3"/>
                                    <field name="renting_period2_minimal_time_unit" class="col-lg-6"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Période 3 (Après saison)</span>
                            <div class="text-muted">
                                Définir la troisième période et la durée minimale associée
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Du" for="renting_period3_start_date" class="col-lg-3 o_light_label"/>
                                    <field name="renting_period3_start_date" class="col-lg-3"/>
                                    <label string="au" for="renting_period3_end_date" class="col-lg-2 o_light_label"/>
                                    <field name="renting_period3_end_date" class="col-lg-4"/>
                                </div>
                                <div class="row mt16">
                                    <label string="Durée minimum" for="renting_period3_minimal_time_duration" class="col-lg-3 o_light_label"/>
                                    <field name="renting_period3_minimal_time_duration" class="col-lg-3"/>
                                    <field name="renting_period3_minimal_time_unit" class="col-lg-6"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
